<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	x:Class="MediaManager.Splash"
	x:Name="Window"
	Title="Media Manager"
	Height="256" Width="256" Loaded="SplashLoaded" AllowsTransparency="True" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None" Background="{x:Null}" mc:Ignorable="d">
	<Grid x:Name="LayoutRoot">
        <Image Source="Images/Logo.png"/>
        <TextBlock x:Name="Message" Text="{Binding Path=Message}"  Margin="30,0,30,12" VerticalAlignment="Bottom" Height="Auto" TextWrapping="Wrap" Foreground="#FFEFE2E2"/>
	</Grid>
</Window>