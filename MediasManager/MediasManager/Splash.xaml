<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	x:Class="MediaManager.Splash"
	x:Name="Window"
	Title="Media Manager"
	Height="261" Width="313" Loaded="SplashLoaded" AllowsTransparency="True" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None" Background="{x:Null}" mc:Ignorable="d">

	<Grid x:Name="LayoutRoot">
		<Grid.Background>
			<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
				<GradientStop Color="#FFFFFFFF" Offset="0"/>
				<GradientStop Color="#FF231E1E" Offset="0.595"/>
				<GradientStop Color="#FF7D7A7A" Offset="0.211"/>
			</LinearGradientBrush>
		</Grid.Background>
		<TextBlock VerticalAlignment="Top" FontSize="36" FontWeight="Bold" Text="Media Manager" TextWrapping="Wrap" HorizontalAlignment="Center" Margin="0,8,0,0"/>
		<TextBlock x:Name="Message" Text="{Binding Path=Message}"  Margin="8,0,8,8" VerticalAlignment="Bottom" Height="Auto" TextWrapping="Wrap" Foreground="#FFEFE2E2"/>
	</Grid>
</Window>